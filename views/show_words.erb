<h1><%= @word_type.capitalize %></h1>
<a href="/words">Go Back</a>


<% if @all_rows.any? %>
  <div class="show-words-container">
    <% @all_rows.each_with_index do |word, index| %>
      <div>
        <h2><%=word[0].capitalize %></h2>
        <a href="/words/<%= @word_type %>/<%= index %>">Definition</a>
      </div>
    <% end %>
  </div>
<% end %>